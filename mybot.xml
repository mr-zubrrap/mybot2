            <input pattern="* (хорош*|отличн*|прекрасн*) *">
                <output>
                    <item value="Это просто замечательно!"/>
                    <item value="Здорово!"/>
                </output>
            </input>
            <input pattern="* (плох*|не очень|так себе) *">
                <output value="Не вешай нос!"/>
            </input>
        </context>
    </input>
        <input pattern="* (молод*|умница*|спасибо*) *">
            <get url="https://ru.telegram-store.com/wp-content/uploads/2016/12/image_4951.png" var="Weather">
              <param name="png" value="$images"/>
            </get>
            <output value='get($Weather)'/>
        </input>
</context>
