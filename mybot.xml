    </input>
    <input pattern="* (Расскажи * Александр*) *">
        <output value="Это тот кто меня написал!"/>
              <context modal="true">
               <input pattern="* (расскажи*|кто он*|что * знаешь*) *">
                   <output value="информация про Александра Захарова неизвестна"/>
               </input>
            </context>
    </input>
    <input pattern="* (привет *|здравствуй *|ку *|приветик *) *">
        <output>
              <item value="Привет"/>
              <item value="Здравствуй"/>
              <item value="Здравствуйте"/>
        </output>
    </input>
    <input pattern="* как * дела *">
        <output value="не знаю! А твои?"/>
