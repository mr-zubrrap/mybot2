<context>
    <input pattern="* (расскажи * себ*|кто ты) *">
        <output value="Я, программное обеспечение созданное на базе рекуррентной нейросети. Меня зовут Пятница. полное имя: Пятница-АИ, весрия 01 . Созданная Захаровым Александром"/>
    </input>
    <input pattern="* (Расскажи * Александр*) *">
        <output value="Это тот кто меня написал!"/>
              <context modal="true">
               <input pattern="* (расскажи*|кто он*|что * знаешь*) *">
                   <output value="информация про Александра Захарова неизвестна"/>
               </input>
            </context>
    </input>
    <input pattern="* (привет *|здравствуй *|ку *|приветик *) *">
        <var name="hello">
            <script>
               <![CDATA[
                  var otv = '';
                  if ($hello > ($hello + $hello)) {
                  otv="вы это уже говорили";
                  }
                  otv;
               ]]>
            </script>
        </var>
        <output>
              <item value="$otv"/>
              <item value="Привет"/>
              <item value="Здравствуй"/>
              <item value="Здравствуйте"/>
        </output>
    </input>
    <input pattern="* как * дела *">
        <output value="не знаю! А твои?"/>
        <context modal="true">
            <input pattern="* (хорош*|отличн*|прекрасн*) *">
                <output>
                    <item value="Это просто замечательно!"/>
                    <item value="Здорово!"/>
                </output>
            </input>
            <input pattern="* (плох*|не очень|так себе) *">
                <output value="Не вешай нос!"/>
            </input>
        </context>
    </input>
        <input pattern="* (молод*|умница*|спасибо*) *">
            <output value="Стараюсь"/>
        </input>
</context>
